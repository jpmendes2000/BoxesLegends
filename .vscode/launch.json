{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Boxes Legends",
            "request": "launch",
            "mainClass": "com.BoxesLegends.Main",
            "vmArgs": [
                "--module-path", "${workspaceFolder}/lib/javafx",
                "--add-modules", "javafx.controls,javafx.fxml,javafx.graphics,javafx.media",
                "--add-opens", "javafx.fxml/javafx.fxml=ALL-UNNAMED",
                "-Dfile.encoding=UTF-8"
            ],
            "classpath": [
                "${workspaceFolder}/bin",
                "${workspaceFolder}/lib/jars_mssql/mssql-jdbc-12.10.1.jre11.jar"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Test Database Connection",
            "request": "launch",
            "mainClass": "com.BoxesLegends.database.DatabaseConnection",
            "classpath": [
                "${workspaceFolder}/bin",
                "${workspaceFolder}/lib/jars_mssql/mssql-jdbc-12.10.1.jre11.jar"
            ],
            "console": "integratedTerminal"
        }
    ]
}
